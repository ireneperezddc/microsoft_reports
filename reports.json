{
  "name": "Microsoft Reports",
  "readme_file": "README.md",
  "version": "0.1.0",
  "language": "python",
  "reports": [
    {
      "name": "NCE Promos",
      "readme_file": "reports/nce_promos/README.md",
      "entrypoint": "reports.nce_promos.entrypoint.generate",
      "audience": [
        "provider",
        "vendor"
      ],
      "report_spec": "2",
      "parameters": [
        {
          "id": "date",
          "type": "date_range",
          "name": "Report period",
          "description": "Provide the time period to create the report",
          "required": true
        },
        {
          "id": "product",
          "type": "product",
          "name": "Product list",
          "description": "Select the products you want to include in report",
          "required": true
        },
        {
          "id": "mkp",
          "type": "marketplace",
          "name": "Marketplaces",
          "required": true,
          "description": "Select the marketplaces you want to include in report"
        }
      ],
      "renderers": [
        {
          "id": "xlsx",
          "type": "xlsx",
          "default": true,
          "description": "Export data in Microsoft Excel 2020 format.",
          "template": "reports/nce_promos/templates/xlsx/template.xlsx",
          "args": {
            "start_row": 2,
            "start_col": 1
          }
        },
        {
          "id": "json",
          "type": "json",
          "default": false,
          "description": "Export data as JSON"
        },
        {
          "id": "csv",
          "type": "csv",
          "default": false,
          "description": "Export data as CSV"
        },
        {
          "id": "xml",
          "type": "jinja2",
          "default": false,
          "description": "Export data as XML",
          "template": "reports/nce_promos/templates/xml/template.xml.j2"
        },
        {
          "id": "pdf-portrait",
          "type": "pdf",
          "default": false,
          "description": "Export data as PDF (portrait)",
          "template": "reports/nce_promos/templates/pdf/template.html.j2",
          "args": {
            "css_file": "reports/nce_promos/templates/pdf/template.css"
          }
        }
      ]
    }
  ]
}
